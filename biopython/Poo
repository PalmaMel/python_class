class Animal:
    def __init__(self, nombre, edad, sonido):
        self.sonido = sonido
        self.nombre = nombre
        self.edad = edad
class Perro(Animal):
    def sonido(self):
        return "woofwoof"
class Gato(Animal):
    def sonido(self):
        return "Meow"
    def usa_arenero(self):
        return f"{self.nombre} usa el arenero"

# Usa_harenero es un atributo y no un método
class gato(animal): 
    def __init__(self, nombre, edad, usa_arenero):
        super().__init__(nombre, edad) #Para inicializar los atrbutos heredados
        self.usa_arenero = usa_arenero
    
    def haz_ruido(self):
        print("¡Miau!")

class Conejo(Animal):
    def __init__(self, nombre, edad, sonido, num_brincos, color):
        super().__init__(nombre, edad, sonido)
        self.num_brincos = num_brincos
        self.color = color

# Crear una instancia de Conejo
mi_conejo = Conejo("Pelusita", 3, None, 4, "blanco")

# Acceder a los atributos del conejo
print(mi_conejo.nombre)       # Pelusita
print(mi_conejo.edad)         # 3
print(mi_conejo.sonido)       # Algun sonido
print(mi_conejo.num_brincos) # 4
print(mi_conejo.color)        # blanco
print (mi_conejo.__dict__)
