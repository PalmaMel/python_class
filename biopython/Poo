class Animal:
    def __init__(self, nombre, edad, sonido):
        self.sonido = sonido
        self.nombre = nombre
        self.edad = edad
class Perro(Animal):
    def sonido(self):
        return "woofwoof"

class Gato(Animal):
    def sonido(self):
        return "Meow"

